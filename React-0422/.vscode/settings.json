{
  "workbench.colorCustomizations": {
    "activityBar.background": "#045273", //側邊欄的背景
    "activityBar.activeBackground": "#19769e", //側邊欄的背景（正在選取的）
    "activityBar.activeBorder": "#41a7d3", //側邊欄邊框（正在選取的）
    "titleBar.activeBackground": "#045273", //標題列的背景
    "titleBar.inactiveBackground": "#045273", //標題列的背景（未選取）
    "statusBar.background": "#045273" //狀態列的背景
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.configPath": ".prettierrc.json",
  "editor.formatOnSave": true,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  }
}
